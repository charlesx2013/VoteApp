<div class="form-group">
  <div class= "col-md-6 col-md-offset-3">
      <h1 class="extra-padding-top">Vote for your Candidates! </h1> 
      <h5> You may only vote for one candidate in each category, or choose to abstain. </h5>
      <%= form_for(:vote, url: votes_path) do %>
        <% @position.each do |pos| %>
          <h3> <%= pos.name %> </h3>
          <% pos.candidates.each do |candidate| %>
            <%= radio_button_tag pos.name, candidate.name %>
            <%= label_tag pos.name, candidate.name %>
          <% end %>
        <% end %>
      <%= hidden_field_tag :type, @type %>
      </br>
      </br>
      <%= submit_tag "Submit Vote", data: { confirm: "Are you sure? You cannot edit your vote." }, class: "btn btn-large btn-info" %>
    <% end %>
  </div>
</div>